<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :max_question, t("max_question") %>
    <%= f.text_field :max_question, class: "form-control" %>

    <%= f.label :max_time, t("max_time") %>
    <%= f.text_field :max_time, class: "form-control" %>

    <%= f.submit t("submit"), class: "btn btn-primary" %>
<% end %>
